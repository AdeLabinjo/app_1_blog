<h3> Show Post </h3>
<br>

<p> <%= @post.title %> </p>
<p>  <%= @post.text %> </p>
<hr> 

<h3> Comments </h3> 
<% @post.comments.each do |comment| %>
  <p> <b> Commenter </b> : <%= comment.commenter %> </p>
 
  <p> <b> Comment: </b> <%= comment.body %> </p>

<%= link_to "Delete", [comment.post, comment], :method => "delete", :data => "Confirm: Are you sure?" %> 

<% end %>
<hr style="colour: blue">


<h3> Add Comments </h3>

<%= render "comments/comment" %>
<%= link_to 'Back', posts_path %> | <%= link_to 'Delete', post_path(@post), method: :delete, data: 
{confirm: 'Are you sure?' } %>
